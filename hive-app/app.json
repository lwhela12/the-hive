{
  "expo": {
    "name": "The Hive",
    "slug": "the-hive",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/The Hive Logo_Low Res (1).png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "thehive",
    "splash": {
      "image": "./assets/The Hive Total transparent background (1).png",
      "resizeMode": "contain",
      "backgroundColor": "#bd9348"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lucaswhelan.thehive",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "The Hive needs microphone access to record meetings.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "notification": {
      "icon": "./assets/Bee ( Hive) .png",
      "color": "#bd9348"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/Bee ( Hive) .png",
        "backgroundColor": "#bd9348"
      },
      "package": "com.lucaswhelan.thehive",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/BEE ONLY IN GOLD BG.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-av",
        {
          "microphonePermission": "Allow The Hive to access your microphone for recording meetings."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/Bee ( Hive) .png",
          "color": "#bd9348"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "20097652-8224-4286-aa03-5d7f4f3c0991"
      }
    }
  }
}
